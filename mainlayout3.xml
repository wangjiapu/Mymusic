<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/l_music1"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/music" />
        <TextView
            android:id="@+id/l_music2"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="23sp"
            android:text="@string/locatmusic"/>
        <TextView
            android:id="@+id/l_music3"
            android:clickable="true"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/zou"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/l_music4"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/like" />
        <TextView
            android:id="@+id/l_music5"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="23sp"
            android:text="@string/mylove"/>
        <TextView
            android:id="@+id/l_music6"
            android:clickable="true"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/zou"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/l_music7"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/xiazai" />
        <TextView
            android:id="@+id/l_music8"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="23sp"
            android:text="@string/down"/>
        <TextView
            android:id="@+id/l_music9"
            android:clickable="true"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/zou"/>
    </LinearLayout>

</LinearLayout>